
import java.util.*;
import java.lang.*;
import java.io.*;

/* Name of the class has to be "Main" only if the class is public. */
class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
	Scanner sc = new Scanner(System.in);
			int n=sc.nextInt();
            int t=0;
			while(t<n){
		   int a =sc.nextInt();
		   if(a<6){
		       System.out.println(0);
		   }
		   else{
		   a=a-6;
		  int p=a/7;
		   System.out.println(p+1);
		   }
		   t++;
			}	// your code goes here
	}
}
